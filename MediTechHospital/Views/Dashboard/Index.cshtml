






@{
    ViewData["Title"] = "Dashboard";
    var user = User.Identity?.Name ?? "Guest";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="text-center mb-4">🏥 MediTech Hospital Dashboard</h2>
    <p class="text-center text-muted">Welcome <b>@user</b></p>

    <div class="row g-4">
        <!-- Doctors Card -->
        <div class="col-md-3">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-badge-fill display-4 text-primary"></i>
                    <h5 class="card-title mt-3">Doctors</h5>
                    <p class="card-text text-muted">Manage doctors and specialties</p>
                    <a class="btn btn-primary w-100" asp-controller="Doctors" asp-action="Index">
                        Manage Doctors
                    </a>
                </div>
            </div>
        </div>

        <!-- Patients Card -->
        <div class="col-md-3">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill display-4 text-success"></i>
                    <h5 class="card-title mt-3">Patients</h5>
                    <p class="card-text text-muted">Track patient data and records</p>
                    <a class="btn btn-success w-100" asp-controller="Patients" asp-action="Index">
                        Manage Patients
                    </a>
                </div>
            </div>
        </div>

        <!-- Clinics Card -->
        <div class="col-md-3">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-hospital-fill display-4 text-danger"></i>
                    <h5 class="card-title mt-3">Clinics</h5>
                    <p class="card-text text-muted">View and manage hospital clinics</p>
                    <a class="btn btn-danger w-100" asp-controller="Clinics" asp-action="Index">
                        Manage Clinics
                    </a>
                </div>
            </div>
        </div>

        <!-- Ratings Card -->
        <div class="col-md-3">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-star-fill display-4 text-warning"></i>
                    <h5 class="card-title mt-3">Ratings</h5>
                    <p class="card-text text-muted">Review patient feedback and ratings</p>
                    <a class="btn btn-warning w-100" asp-controller="Ratings" asp-action="Index">
                        Manage Ratings
                    </a>
                </div>
            </div>
        </div>

        <!-- Appointments Card -->
        <div class="col-md-3">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-check-fill display-4 text-info"></i>
                    <h5 class="card-title mt-3">Appointments</h5>
                    <p class="card-text text-muted">Organize and schedule appointments</p>
                    <a class="btn btn-info w-100" asp-controller="Appointments" asp-action="Index">
                        Manage Appointments
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Logout -->
    <div class="text-center mt-5">
        <form asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-dark">
                <i class="bi bi-box-arrow-right"></i> Logout
            </button>
        </form>
    </div>
</div>









