




@model MediTechHospital.Models.LoginViewModel
@{
    Layout = null;
    var lang = Context.Request.Query["lang"].ToString() ?? "ar";
    var isArabic = lang == "ar";
    var toggleLang = isArabic ? "en" : "ar";
}
<!DOCTYPE html>
<html lang="@(isArabic ? "ar" : "en")" dir="@(isArabic ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <title>@(isArabic ? " MediTech Hospital" :  "MediTech Hospital")</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body { margin:0; height:100vh; display:flex; font-family: 'Cairo', sans-serif; }
        .left-panel{ flex:1; background:#0d1b2a; color:#fff; display:flex; align-items:center; justify-content:center; flex-direction:column; }
        .login-box{ width:100%; max-width:420px; padding:20px; }
        .form-control{ background:#142033; border:none; color:#fff; }
        .right-panel{ flex:1; background:linear-gradient(135deg,#48cae4,#0096c7); display:flex; align-items:center; justify-content:center; flex-direction:column; color:#fff; text-align:center; }
        .logo{ max-width:220px; margin-bottom:15px; }
    </style>
</head>
<body>
    <div class="left-panel">
        <div class="text-end mb-3 w-100 px-3">
            <a href="?lang=@toggleLang" class="btn btn-outline-light btn-sm">
                @(isArabic ? "English" : "عربي")
            </a>
        </div>
        <div class="login-box">
            <h2 class="mb-4">@(isArabic ? "تسجيل دخول" : "Login")</h2>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <input asp-for="Email" class="form-control" placeholder="@(isArabic ? "البريد الإلكتروني" : "Email")" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="@(isArabic ? "كلمة المرور" : "Password")" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">@(isArabic ? "تذكرني" : "Remember Me")</label>
                </div>
                <button type="submit" class="btn btn-primary w-100">@(isArabic ? "تسجيل" : "Login")</button>
                <div class="mt-3 text-center">
                    <a asp-action="Register" class="text-info">@(isArabic ? "إنشاء حساب جديد" : "Create Account")</a> |
                    <a asp-action="ForgotPassword" class="text-warning">@(isArabic ? "نسيت كلمة المرور؟" : "Forgot Password?")</a>
                </div>
            </form>
        </div>
    </div>

    <div class="right-panel">
        <img src="~/js/medical-logo-template_1286368-93639.jpg" class="logo" alt="MediTech Hospital" />
        <h3>MediTech Hospital</h3>
        <p>@(isArabic ? "نظام إدارة المستشفى" : "Hospital Management System")</p>
    </div>
</body>
</html>
