@model MediTechHospital.Models.RegisterViewModel
@{
    Layout = null;
    var lang = Context.Request.Query["lang"].ToString() ?? "ar";
    var isArabic = lang == "ar";
    var toggleLang = isArabic ? "en" : "ar";
}
<!DOCTYPE html>
<html lang="@(isArabic ? "ar" : "en")" dir="@(isArabic ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <title>@(isArabic ? "إنشاء حساب - MediTech Hospital" : "Register - MediTech Hospital")</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            height: 100vh;
            display: flex;
            font-family: 'Cairo', sans-serif;
        }

        .left-panel {
            flex: 1;
            background: #0d1b2a;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }

        .register-box {
            width: 100%;
            max-width: 420px;
            padding: 20px;
        }

        .form-control {
            background: #142033;
            border: none;
            color: #fff;
        }

        .right-panel {
            flex: 1;
            background: linear-gradient(135deg,#48cae4,#0096c7);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            color: #fff;
            text-align: center;
        }

        .logo {
            max-width: 220px;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="left-panel">
        <div class="text-end mb-3 w-100 px-3">
            <a href="?lang=@toggleLang" class="btn btn-outline-light btn-sm">@(isArabic ? "English" : "عربي")</a>
        </div>
        <div class="register-box">
            <h2 class="mb-4">@(isArabic ? "إنشاء حساب" : "Register")</h2>
            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <input asp-for="Email" class="form-control" placeholder="@(isArabic ? "البريد الإلكتروني" : "Email")" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="@(isArabic ? "كلمة المرور" : "Password")" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="@(isArabic ? "تأكيد كلمة المرور" : "Confirm Password")" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success w-100">@(isArabic ? "تسجيل" : "Register")</button>
                <p class="mt-3 text-center">
                    @(isArabic ? "لديك حساب؟" : "Already have an account?")
                    <a asp-action="Login">@(isArabic ? "تسجيل دخول" : "Login")</a>
                </p>
            </form>
        </div>
    </div>
    <div class="right-panel">
        <img src="~/images/meditech-logo.png" class="logo" alt="MediTech Hospital" />
        <h3>MediTech Hospital</h3>
        <p>@(isArabic ? "نظام إدارة المستشفى" : "Hospital Management System")</p>
    </div>
</body>
</html>
