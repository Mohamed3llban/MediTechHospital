@model IEnumerable<MediTechHospital.Models.Appointment>

<h2>Appointments</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add Appointment</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Date</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PatientName</td>
                <td>@item.DoctorName</td>
                <td>@item.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.Notes</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                
                    <form asp-action="DeleteConfirmed" method="post" style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete this appointment?');">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
