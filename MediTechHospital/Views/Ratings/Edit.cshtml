@model MediTechHospital.Models.Rating

<h2>Edit Rating</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="PatientName" class="form-label"></label>
        <input asp-for="PatientName" class="form-control" />
        <span asp-validation-for="PatientName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DoctorName" class="form-label"></label>
        <input asp-for="DoctorName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Stars" class="form-label"></label>
        <input asp-for="Stars" type="number" min="1" max="5" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Comment" class="form-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
