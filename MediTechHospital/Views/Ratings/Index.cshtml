@model IEnumerable<MediTechHospital.Models.Rating>

<h2>Ratings</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Rating</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Stars</th>
            <th>Comment</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rating in Model)
        {
            <tr>
                <td>@rating.PatientName</td>
                <td>@rating.DoctorName</td>
               <td>
    @for (int i = 0; i < rating.Stars; i++)
    {
        <span class="text-warning">&#9733;</span> <!-- filled star -->
    }
    @for (int i = rating.Stars; i < 5; i++)
    {
        <span class="text-secondary">&#9734;</span> <!-- empty star -->
    }
</td>

                <td>@rating.Comment</td>
                <td>@rating.DateRated.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@rating.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="DeleteConfirmed" method="post" style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete this rating?');">
                        <input type="hidden" name="id" value="@rating.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
