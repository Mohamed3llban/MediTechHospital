@model IEnumerable<MediTechHospital.Models.Patient>

<h2>Patients</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add Patient</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Birth Date</th>
            <th>Gender</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.BirthDate.ToShortDateString()</td>
                <td>@item.Gender</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>


                    <form asp-action="DeleteConfirmed" method="post" style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete this patient?');">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>


                </td>
            </tr>
            <form asp-controller="Patients" asp-action="Index" method="get" class="mb-3">
               
            </form>

        }
    </tbody>
</table>
